{
    "app": {
        "host": "0.0.0.0",
        "port": 5000,
        "debug": true
    },
    "downloader": {
        "delay_between_chapters": 2,
        "max_retries": 3,
        "timeout": 30,
        "user_agent": "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/91.0.4472.124 Safari/537.36"
    },
    "output": {
        "downloads_folder": "downloads",
        "filename_format": "Chuong_{number:03d}_{title}.txt",
        "zip_compression": "ZIP_DEFLATED"
    },
    "content_cleaning": {
        "remove_ads": true,
        "remove_converter_notes": true,
        "remove_empty_lines": true,
        "tags_to_remove": ["script", "style", "canvas", "iframe"]
    }
}
